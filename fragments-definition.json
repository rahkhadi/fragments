{
  "family": "fragments",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::023521315269:role/LabRole",
  "taskRoleArn": "arn:aws:iam::023521315269:role/LabRole",
  "containerDefinitions": [
    {
      "name": "fragments",
      "image": "023521315269.dkr.ecr.us-east-1.amazonaws.com/fragments:0.10.15",      "portMappings": [{ "containerPort": 8080, "protocol": "tcp" }],
      "essential": true,
      "environment": [
        { "name": "PORT", "value": "8080" },
        { "name": "LOG_LEVEL", "value": "info" },
        { "name": "NODE_ENV", "value": "production" },
        { "name": "AWS_REGION", "value": "us-east-1" },
        { "name": "AWS_S3_BUCKET_NAME", "value": "fragments" },
        { "name": "AWS_S3_ENDPOINT_URL", "value": "https://s3.amazonaws.com" },
        { "name": "AWS_DYNAMODB_TABLE_NAME", "value": "fragments" },
        { "name": "FRAGMENTS_DB_TYPE", "value": "aws" },
        { "name": "COGNITO_CLIENT_ID", "value": "1mbifsbohdbpf38vp7dbfdfqrt" },
        { "name": "COGNITO_USER_POOL_ID", "value": "us-east-1_DuKU5EOar" },
        { "name": "COGNITO_REDIRECT_URI", "value": "http://localhost:3000" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fragments",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
      
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512"
}

